clc; 
close all; 
clear all;
n= input ('enter the value of n :'); 
SIR = 15;
powl=2/n; 
SIR=power(10,SIR/10);
N=round((power(6*SIR,powl))/3); 
fprintf('N=%d',N);
disp(' '); 
valid=0; 
for i=0:1:5
 for j=0:1:5 
   x=power(i,2)+power(j,2)+i*j; 
   if x==N
      valid=1; 
      break;
  end 
 end
end 
arr=zeros(); 
p=1;
if valid==0 
    for i=0:1:5
        for j=0:1:5 
           x=power(i,2)+power(j,2)+i*j; 
           arr(p)=x;
           p=p+1; 
         end
     end 
end
sorted_arr=sort(arr); 
for i=1:1:15
   if sorted_arr(i)>N 
      N=sorted_arr(i); 
      break;
   end 
end
fprintf('verification N=%d',N)
